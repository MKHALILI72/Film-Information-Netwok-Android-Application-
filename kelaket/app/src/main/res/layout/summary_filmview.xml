<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:style="@style/CardView"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/filmtitletextsize"
            android:text="خلاصه فیلم"
            android:layout_gravity="center"
            android:textColor="@color/mainappcolor"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />
        <FrameLayout
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/mainappcolor"
            ></FrameLayout>
        <TextView
            android:id="@+id/summarytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="یسبش شسبی شس بش سب شسب ش ب شسب شسب ش بش سب شسب ش سب شسب شس ب شسب ش سب شسب شس ب"
            android:layout_gravity="center"
            android:textSize="@dimen/filmmaintextsize"
            android:justificationMode="inter_word"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>