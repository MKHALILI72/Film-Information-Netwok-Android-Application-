<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    tools:style="@style/CardView"
    android:padding="10dp"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/avatar"
        />
    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محمد خلیلی میگوید:"
        app:layout_constraintRight_toLeftOf="@+id/profileimg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_margin="10dp"
        android:textSize="12dp"
        android:textColor="@color/mainappcolor"
        />
    <TextView
        android:id="@+id/commenttxt"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:text="خیلی عالی و خوب بود   asdfasf as fas fasf as fas fسشیششسیسشیسشیسشیشسیشسی سشیشسیشسیسشبasf as dfasdasd asd as fasf asf as fas fas fasfas fasf as fas fsadas asda sd asdf adsfaf a sdf asfasf asf a sfaf a f"
        app:layout_constraintRight_toLeftOf="@+id/profileimg"
        app:layout_constraintTop_toBottomOf="@id/profilename"
        android:layout_marginBottom="10dp"
        app:layout_goneMarginRight="2dp"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>